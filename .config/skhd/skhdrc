# change window focus within space
ctrl + shift - j : yabai -m window --focus south
ctrl + shift - k : yabai -m window --focus north
ctrl + shift - h : yabai -m window --focus west
ctrl + shift - l : yabai -m window --focus east

# change focus between external displays (left and right)
meh - h : yabai -m display --focus 1
meh - l : yabai -m display --focus 2

meh - y : yabai -m space --focus prev
meh - p : yabai -m space --focus next
# rotate layout clockwise
meh - r : yabai -m space --rotate 270

# flip along y-axis
# meh - y : yabai -m space --mirror y-axis

# flip along x-axis
meh - x : yabai -m space --mirror x-axis

# toggle window float
meh - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
meh - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
meh - e : yabai -m space --balance

# swap windows
meh + cmd - j : yabai -m window --swap south
meh + cmd - k : yabai -m window --swap north
meh + cmd - h : yabai -m window --swap west
meh + cmd - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
meh - s : yabai -m window --display west; yabai -m display --focus west;
meh - g : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
# meh - p : yabai -m window --space prev;
meh - n : yabai -m window --space next;

# move window to space #
meh - 1 : yabai -m window --space 1;
meh - 2 : yabai -m window --space 2;
meh - 3 : yabai -m window --space 3;
meh - 4 : yabai -m window --space 4;
meh - 5 : yabai -m window --space 5;
meh - 6 : yabai -m window --space 6;
meh - 7 : yabai -m window --space 7;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
