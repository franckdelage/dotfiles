{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "copilot/claude-sonnet-4.5",
  "formatter": {
    "prettier": {
      "disabled": true
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.atlassian.com/v1/sse"],
      "enabled": true
    }
  } 
}
